@model IEnumerable<DoAnHomeFinder.Models.NguoiDung>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách người dùng</h2>

<p>
    @Html.ActionLink("Thêm mới người dùng", "Create")
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</p>
<table class="table">
    <tr>
        <th class="text-center">
            STT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_nguoi_dung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sdt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mat_khau)
        </th>
        <th class="text-center">
            Quyền
        </th>
        <th class="text-center">
            Hành động
        </th>
    </tr>
    @{
        int i = 0;
    }
    @foreach (var item in Model)
    {
<tr>
    <td class="text-center">
        @{ i++; }
        @i
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.id_nguoi_dung)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ten)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.sdt)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.mat_khau)
    </td>
    <td class="text-center">
        @if (item.quyen == 0)
        {
            <span>User dùng app</span>
        }
        @if (item.quyen == 1)
        {
            <span>Quản trị viên</span>
        }
        @if (item.quyen == 2)
        {
            <span>Admin</span>
        }
    </td>

    <td style="max-width:50px !important;">
        <div class="text-center">
            @Html.ActionLink("Xem", "Detail", new { id = item.id_nguoi_dung }, new { @class = "btn btn-default btn-sm" })
        </div>
        <div class="text-center" style="margin-top:10px;">
            @Html.ActionLink("Sửa", "Edit", new { id = item.id_nguoi_dung }, new { @class = "btn btn-primary btn-sm" })
        </div>
        @if (ViewBag.quyen == "2")
        {
            <div class="text-center" style="margin-top:10px;">
                @Html.ActionLink("Xóa", "Delete", new { id = item.id_nguoi_dung }, new { @class = "btn btn-danger btn-sm" })
            </div>
        }

    </td>
</tr>
    }

</table>
