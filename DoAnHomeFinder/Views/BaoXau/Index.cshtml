@model IEnumerable<DoAnHomeFinder.Models.BaoXau>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách Báo Xấu</h2>

<p>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</p>
<table class="table">
    <tr>
        <th class="text-center">
            STT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_baocao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_bai_dang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_nguoi_dung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.noi_dung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tieu_de)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.thoi_gian)
        </th>
    </tr>
    @{
        int i = 0;
    }
    @foreach (var item in Model)
    {
<tr>
    <td class="text-center">
        @{ i++; }
        @i
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.id_baocao)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.id_bai_dang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.id_nguoi_dung)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.noi_dung)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.tieu_de)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.thoi_gian)
    </td>
    

    <td style="max-width:50px !important;">
        <div class="text-center">
            @Html.ActionLink("Xem", "Detail", new { id = item.id_baocao }, new { @class = "btn btn-default btn-sm" })
        </div>
        <div class="text-center" style="margin-top:10px;">
                @Html.ActionLink("Xóa", "Delete", new { id = item.id_baocao }, new { @class = "btn btn-danger btn-sm" })
        </div>
        

    </td>
</tr>
    }

</table>
